{
  "title": "Change right_shift to caps_lock if pressed alone",
  "rules": [
      {
          "description": "Change right_shift to caps_lock if pressed alone",
          "manipulators": [
              {
                  "from": {
                      "key_code": "right_shift",
                      "modifiers": {
                          "optional": [
                              "any"
                          ]
                      }
                  },
                  "to": [
                      {
                          "key_code": "right_shift"
                      }
                  ],
                  "to_if_alone": [
                      {
                          "key_code": "caps_lock"
                      }
                  ],
                  "to_if_held_down": [
                      {
                          "key_code": "caps_lock"
                      }
                  ],
                  "type": "basic"
              }
          ]
      }
    ]
}
